<h3 class="section">Members Count</h3>
@if (ViewBag.rolecountdata != null)
{
    <div class="rl_Details clearfix">
        <div class="divrole rl_head">
            <div class="rl_heading">RoleName</div>
            <div class="rl_heading">User Count</div>
        </div>
        @foreach (var roles in ViewBag.rolecountdata)
        {
            <div class="divrole">
                <div class="rl_cnt">@roles.RoleName</div>
                <div class="rl_cnt">@roles.UserCount</div>
            </div>
        }
    </div>
}
else
{
    <div>No Members found</div>
}

<h3 class="section">Newest Members</h3>


    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Approved</th>
                <th>Created Date</th>

            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Approved</th>
                <th>Created Date</th>
            </tr>
        </tfoot>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var i in Model)
                {
                    <tr>
                        <td>
                            <a href="/ManageUser/SaveUser?Userid=@i.UserId">@i.UserName</a>
                        </td>

                        <td>@i.Email</td>
                        <td>@i.IsApproved</td>
                        <td>@i.CreateDate</td>

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">No new members have been created in the last 30 days.</td>
                </tr>
            }
        </tbody>
    </table>

<script src="~/Custom_JS/AdminHome_Index_JS.js" defer></script>

    
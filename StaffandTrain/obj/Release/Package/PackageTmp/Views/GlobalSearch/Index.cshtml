@{
    ViewBag.Title = "Global Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .admin-formNew {
        min-height: 90px
    }

    table thead tr {
        background-color: #f9f9f9;
    }

    table tbody tr td:last-child {
        text-align: center
    }

    .company-header, .contact-header {
        cursor: pointer;
        font-size: 1.1em;
    }

    .search-icon {
        position: absolute;
        top: 32px;
        right: 26px;
        font-size: 1.1em;
    }

    .fa.fa-times {
        cursor: pointer;
    }
</style>
<link href="~/Content/loading.css" rel="stylesheet" />
<div class="loading hidden">Loading&#8230;</div>
<label id="IsAuthenticated1" style="display:none">@Request.IsAuthenticated</label>
<label id="IsRoleAdmin" style="display:none">@User.IsInRole("Admin")</label>

<div class="container main-ctn">

    @if (User.IsInRole("Admin"))
    {
        <h1 class="title">Global Search (Admin)</h1>
    }
    else
    {
        <h1 class="title">Global Search (Recruiter)</h1>
    }
    Return Path:
    <a href="/ProspectListsAdmin/Index">
        PROSPECT LISTS
    </a>


    <div class="admin-formNew">


        <div class="col-sm-8 form-group">
            <label>Company Name or Person Name </label>
            <input class="form-control" id="txtSearch" name="txtname" type="text" value="">
            <div class="search-icon">
                <i class="fa fa-search search"></i>
                <i class="fa fa-times clear hidden" title="Clear Search"></i>
            </div>

            <div id="" class="validateTips"></div>
        </div>

        <div class="col-sm-4 form-group">
            <label></label>
            <div class="divcreate"><a href="javascript:void(0)" class="btn btn-success" id="btnSearch">Search </a> </div>
        </div>

    </div>


    <div class="results">
        <table id="tblCompanyResults" class="table table-striped table-bordered hidden">
            <thead>
                <tr>
                    <th colspan="4">
                        <div class="company-header expanded">
                            <span class="company-ec-icon">
                                <i class="fa fa-angle-up"></i>
                            </span>
                            Companies (<span class="company-count"></span>)
                        </div>
                    </th>

                </tr>
                <tr>
                    <th width="20%">Biz Type</th>
                    <th>Company Name</th>
                    <th>List</th>
                    <th width="10%">User Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

        <table id="tblContactResults" class="table table-striped table-bordered hidden">
            <thead>
                <tr>
                    <th colspan="4">
                        <div class="contact-header expanded">
                            <span class="contact-ec-icon">
                                <i class="fa fa-angle-up"></i>
                            </span>
                            Contacts (<span class="contact-count"></span>)
                        </div>
                    </th>
                </tr>
                <tr>
                    <th width="35%">Full Name/Phone/Email/LinkedIn</th>
                    <th>Combined Notes</th>
                    <th width="20%">List</th>
                    <th width="10%">User Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>


    </div>

</div>

<script src="~/Custom_JS/GlobalSearch_Index.js?v=2" defer></script>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
@*<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">*@
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css"></style>
<script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
@*<script type="text/javascript" src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>*@
<script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/docsupport/style.css">
<link rel="stylesheet" href="~/docsupport/prism.css">
<link href="~/chosen.css" rel="stylesheet" />
<h3 class="section">Workers</h3>
<div class="divcreate"><a href="/Worker/SaveWorker" class="btn btn-success" id="lnkcreate">Create New   <i class="fa fa-plus" aria-hidden="true"></i></a> 
                       <div style="float: right; padding-top:7px; font-weight: bold;">
                           Server Time: @ViewBag.ServerTime
                       </div>
    </div>

@if (@ViewBag.message == "Worker Deleted" || @ViewBag.message == "Worker Created" || @ViewBag.message == "Worker Saved" || @ViewBag.message == "Worker Updated")
{
    <div id="" class="alert alert-success">@ViewBag.Message</div>
}
else if (@ViewBag.message != null)
{
    <div id="" class="alert alert-danger">@ViewBag.Message</div>
}
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Check In Time</th>
            <th width="150px">Actions</th>

        </tr>
    </thead>

    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var i in Model)
            {
                <tr>
                    <td>@i.Name</td>
                    <td>@i.Email</td>
                    <td>@DateTime.Today.Add(i.CheckIn).ToString("hh:mm:ss tt")</td>

                    <td>
                        <a class="btn Edit" href="/Worker/SaveWorker/@i.Id"><i class="fa fa-pencil-square-o"></i></a>
                        <a href="/Worker/Deleteworker/@i.Id" class="btn Delete" onclick='return confirm("Are you sure you wish to delete this Worker?");'><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No Worker Found</td>
            </tr>
        }
    </tbody>
</table>

<label id="IsAuthenticated" style="display:none">@Request.IsAuthenticated</label>


<script src="~/Custom_JS/ManageUser_Index.js" defer></script>
<script src="~/chosen.jquery.min.js"></script>
<script src="~/docsupport/prism.js" charset="utf-8"></script>
<script src="~/docsupport/init.js" charset="utf-8"></script>


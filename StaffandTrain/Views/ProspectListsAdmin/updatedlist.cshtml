@{
    Layout = null;
}
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>List ID</th>
            <th>ListName</th>
            <th>Total No. of Company</th>
            <th>Total No. of Contact</th>
            @if (User.IsInRole("Admin"))
            {
                <th style="width: 14%;">User Actions</th>
            }
        </tr>
    </thead>

    <tbody>
        @if (Model.Count > 0)
            {
                foreach (var i in Model)
                {
                <tr>
                    <td>@i.listid</td>
                    @*<td>@i.listname</td>*@
                    <td>
                        <a href="/ProspectViewList/Index?listid=@i.listid&lstname=@i.listname">@i.listname</a>
                    </td>
                    <td>@i.Cnt</td>
                    <td>@i.contactCount</td>
                    @if (User.IsInRole("Admin"))
                    {
                    <td>
                        <a class="btn Edit" onclick="showpopupedit('@i.listname','@i.listid','@i.restricted')" href="javascript:void(0)"><i class="fa fa-pencil-square-o"></i></a>
                        <a href="/ManageRoles/Delete_Role?RoleName=@i.listname" class="btn Delete" onclick='return confirm("Are you sure you wish to delete this Prospect?");'><i class="fa fa-trash-o"></i></a>
                        @*<a class="btn MoveList" onclick="showpopup_Move('@i.listid', '@i.listname')" href="javascript:void(0)" title="Move list's companies and their contacts with notes to another list"><i class="fa fa-exchange"></i></a>*@
                    </td>
                    }

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No Record Found</td>
            </tr>
        }
    </tbody>
</table>